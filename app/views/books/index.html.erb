<h1>Books</h1>
  <table>
    <thead>
     <tr>
       <th>Title</th>
       <th>Body</th>
       <th clospan = "3"> </th>
     </tr>
    </thead>
    <tboby>
       <% @books.each do |book| %>


      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>

      </tr>

      <% end %>

    </tboby>
  </table>

<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>
<div>
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>
<div>
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>
<div>
  <%= f.submit 'Create Book' %>
</div>




<% end %>